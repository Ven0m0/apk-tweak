#!/bin/bash
set -euo pipefail; shopt -s nullglob
LC_ALL=C

main(){
  command -v python3 &>/dev/null || exit 1
  # Resolve project root (supports running from git checkout)
  local src_root=$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)
  PYTHONPATH="${src_root}${PYTHONPATH:+:${PYTHONPATH}}" python3 -m rvp.cli "$@"
}
main "$@"
